---
pagination:
  data: collections.postsByCategory
  size: 1
  addAllPagesToCollections: true
permalink: "/blog/category/{{ pagination.items[0] }}/index.html"
layout: layouts/base.njk
eleventyComputed:
  title: "{{ collections.postsByCategory[pagination.items[0]].name }} Posts"
---
{% from "partials/blog-card.njk" import blogCard %}
<section class="content-section-boxed content-section-top-margin">
    <h1 class="section-title">Posts in "{{ collections.postsByCategory[pagination.items[0]].name }}"</h1>
    <div class="section-underline"></div>
    
    <h2 class="category-post-count-header">{{ collections.postsByCategory[pagination.items[0]].posts.length }} post{% if collections.postsByCategory[pagination.items[0]].posts.length != 1 %}s{% endif %} in {{ collections.postsByCategory[pagination.items[0]].name }}</h2>
    
    <p class="category-page-back-link">
        <a href="{{ '/blog' | url }}" class="category-page-back-link">‚Üê Back to All Posts</a>
    </p>
    
    <div class="blog-post-list">
        {%- for post in collections.postsByCategory[pagination.items[0]].posts -%}
            {{ blogCard(post) }}
        {%- endfor -%}
    </div>
</section>
