{% from "macros/navigation.njk" import navLinks %}
<!-- Shared navigation for all layouts -->
<nav class="navbar" role="navigation" aria-label="Main navigation">
    <div class="navbar-container">
        <a href="{{ '/' | url }}" class="navbar-brand" role="banner" aria-label="Mike Henke - Return to homepage">Mike Henke</a>
        
        <!-- Hamburger Toggle (desktop only, hidden on mobile) -->
        <button class="navbar-toggle" aria-label="Open navigation menu" aria-expanded="false" aria-controls="nav-menu">
            <i class="fas fa-bars" aria-hidden="true"></i>
        </button>
        
        <ul class="navbar-links" id="nav-menu" role="menubar">
            <!-- Mobile menu header -->
            <div class="mobile-menu-header">
                <span class="menu-brand">Mike Henke</span>
                <!-- Close button INSIDE slide-out menu -->
                <button class="navbar-close" aria-label="Close navigation menu" tabindex="0">
                    <i class="fas fa-times" aria-hidden="true"></i>
                </button>
            </div>
            
            {{ navLinks() }}
        </ul>
    </div>
    
    <!-- Mobile overlay -->
    <div class="nav-overlay"></div>
</nav>
